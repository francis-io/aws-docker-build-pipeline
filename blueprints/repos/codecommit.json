{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "A stack to create a project specific git repository on CodeCommit.",
  "Parameters": {
    "RepositoryName": {
      "Type": "String"
    },
    "WipEcrIntermediateName": {
      "Type": "String"
    },
    "DemoEcrIntermediateName": {
      "Type": "String"
    },
    "LiveEcrIntermediateName": {
      "Type": "String"
    },
    "WipEcrName": {
      "Type": "String"
    },
    "DemoEcrName": {
      "Type": "String"
    },
    "LiveEcrName": {
      "Type": "String"
    }
  },
  "Resources": {
    "Repository": {
      "Type": "AWS::CodeCommit::Repository",
      "Properties": {
        "RepositoryName": {
          "Ref": "RepositoryName"
        },
        "RepositoryDescription": "An example repository."
      }
    },
    "WipEcr": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {
          "Ref": "WipEcrName"
        },
        "RepositoryPolicyText": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CodeBuildAccess",
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::570169269855:root"
                ]
              },
              "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:BatchCheckLayerAvailability"
              ]
            }
          ]
        }
      }
    },
    "DemoEcr": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {
          "Ref": "DemoEcrName"
        },
        "RepositoryPolicyText": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CodeBuildAccess",
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::570169269855:root"
                ]
              },
              "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:BatchCheckLayerAvailability"
              ]
            }
          ]
        }                                                                                                                                                                     
      }
    },
    "LiveEcr": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {
          "Ref": "LiveEcrName"
        },
        "RepositoryPolicyText": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CodeBuildAccess",
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::570169269855:root"
                ]
              },
              "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:BatchCheckLayerAvailability"
              ]
            }
          ]
        }                                                                                                                                                                     
      }
    }
  },
  "Outputs": {
  }
}

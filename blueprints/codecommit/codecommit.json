{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "A stack to create a project specific git repository on CodeCommit.",

  "Parameters": {
    "RepositoryName": {
      "Type": "String"
    },
    "IntermediateECRName": {
      "Type": "String"                                                      
    },
    "ECRName": {
      "Type": "String"                                                      
    }
  },

  "Resources": {
    "Repository": {
      "Type": "AWS::CodeCommit::Repository",
      "Properties": {
        "RepositoryName": {"Ref": "RepositoryName"},
        "RepositoryDescription": "An example repository."
      }
    },
    "IntermediateECR": {
      "Type" : "AWS::ECR::Repository",
      "Properties" : {
        "RepositoryName" : {"Ref": "IntermediateECRName"},
        "RepositoryPolicyText" : {
          "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CodeBuildAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::570169269855:root"
        ]
      },
      "Action": [
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability"
      ]
    }
  ]
        }
       }     
      },
      "ECR": {
        "Type" : "AWS::ECR::Repository",
        "Properties" : {
          "RepositoryName" : {"Ref": "ECRName"},
          "RepositoryPolicyText" : {
            "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CodeBuildAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::570169269855:root"
        ]
      },
      "Action": [
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability"
      ]
    }
  ]
          } 
        }
      }
  },
 "Outputs": {
    "RepositoryArn": {
      "Value": {"Fn::GetAtt": ["Repository", "Arn"]}
    },
    "CloneUrl": {
      "Value": {"Fn::GetAtt": ["Repository", "CloneUrlSsh"]}
  }
 }
}
